{"actions": [{"type": "command", "label": "Install .deb", "command_line": "dpkg -i %f", "mimetypes": ["application/vnd.debian.binary-package"]}, {"type": "command", "label": "Run with JRE", "command_line": "java -jar %f", "mimetypes": ["application/java-archive"]}, {"type": "command", "label": "Run with Python3", "command_line": "gnome-terminal -t \"Running Python %b\" --profile \"No Close\" -- python3 %b", "cwd": "%d", "max_items": 1, "mimetypes": ["text/x-python"]}, {"type": "command", "label": "Open in text", "command_line": "gnome-text-editor %F", "filetypes": ["!directory", "standard"]}, {"type": "command", "label": "Check if hard link", "command_line": "zenity --info --text=\"There are $(stat -c \\%\\h %f) hard links to this file\"", "use_shell": true, "filetypes": ["file"]}, {"type": "menu", "label": "Folder Actions", "actions": [{"type": "command", "label": "Execute command here", "command_line": "$(zenity --entry --text \"Enter command\" --title \"execute command in %f\" --width 800)", "cwd": "%f", "use_shell": true, "max_items": 1, "filetypes": ["directory"]}, {"type": "command", "label": "Start HTTP server here", "command_line": "gnome-terminal -t \"HTTP Server on %f\" -- python3 -m http.server --bind 127.0.0.1", "cwd": "%f", "max_items": 1, "mimetypes": ["inode/directory"]}, {"type": "command", "label": "Remove hidden files from recent", "command_line": "python -c 'import xml.etree.ElementTree as ET;import os;recently_used = os.path.expanduser(\"\"\"~/.local/share/recently-used.xbel\"\"\");tree = ET.parse(recently_used);root = tree.getroot();[root.remove(bookmark) for bookmark in root.findall(\"bookmark\") if \"\"\"/.\"\"\" in bookmark.attrib[\"href\"]];tree.write(recently_used);'"}]}, {"type": "menu", "label": "Copy", "actions": [{"type": "command", "label": "Copy name", "command_line": "echo -n %B | xclip -f -selection primary | xclip -selection clipboard", "use_shell": true}, {"type": "command", "label": "Copy path", "command_line": "echo -n %F | xclip -f -selection primary | xclip -selection clipboard", "use_shell": true}, {"type": "command", "label": "Copy URI", "command_line": "echo -n %U | xclip -f -selection primary | xclip -selection clipboard", "use_shell": true}, {"type": "command", "label": "Copy Mimetype", "command_line": "xdg-mime query filetype %f | xclip -f -selection primary | xclip -selection clipboard", "use_shell": true, "filetypes": ["file"]}]}, {"type": "menu", "label": "Create links", "actions": [{"type": "command", "label": "Symbolic link (Directory picker)", "command_line": "ln -s $(zenity --file-selection --directory)", "cwd": "%f", "use_shell": true, "filetypes": ["directory"]}, {"type": "command", "label": "Symbolic link (File picker)", "command_line": "ln -s $(zenity --file-selection)", "cwd": "%f", "use_shell": true, "filetypes": ["directory"]}, {"type": "command", "label": "Symbolic link (Input)", "command_line": "ln -s $(zenity --entry --width 600 --title=\"Create symbolic link\" --text=\"Destination file/directory\")", "cwd": "%f", "use_shell": true, "filetypes": ["directory"]}, {"type": "command", "label": "Hard link (Input)", "command_line": "ln $(zenity --entry --width 600 --title=\"Create symbolic link\" --text =\"Destination file/directory\")", "cwd": "%f", "use_shell": true, "filetypes": ["directory"]}, {"type": "command", "label": "Hard link (File picker)", "command_line": "ln $(zenity --file-selection)", "cwd": "%f", "use_shell": true, "filetypes": ["directory"]}]}]}